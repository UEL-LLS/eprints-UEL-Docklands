<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:epc="http://eprints.org/ep3/control">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>
      <epc:pin ref="title" textonly="yes" />
      -
      <epc:phrase ref="archive_name" />
    </title>
    <link rel="icon" href="{$config{rel_path}}/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="{$config{rel_path}}/favicon.ico" type="image/x-icon" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js" />
    <epc:pin ref="head" />
    <!-- Bootstrap -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Modernizr -->
    <script src="{$config{rel_path}}/docklands_template/Scripts/modernizr.js" />

    <!-- UEL styles -->
    <link href="{$config{rel_path}}/docklands_template/Styles/main.css" rel="stylesheet" />
    <link href="{$config{rel_path}}/docklands_template/Styles/webfonts.css" rel="stylesheet" />
    <link href="{$config{rel_path}}/docklands_template/Styles/search.css" rel="stylesheet" />
    <link href="{$config{rel_path}}/docklands_template/Styles/UEL.css" rel="stylesheet" />
    <link href="{$config{rel_path}}/docklands_template/Styles/recollect_overrides.css" rel="stylesheet" />

    <style type="text/css">

	<epc:print expr="$config{docklands_default_css}" /> 

	/* Style from phrases */
	.btn-docklands {
		background-color: #<epc:phrase ref="docklands_colour_1"/>;
		color: #fff;
		border-radius: <epc:phrase ref="docklands_btn_radius"/>px;//!important;
	}
	.btn-docklands:hover {
                background-color: #<epc:phrase ref="docklands_colour_2"/>;//!important;
                color: #fff;
        }
	.trim {
		border-color: #<epc:phrase ref="docklands_colour_1"/>;
	}
	.shadow {box-shadow: 0 0 <epc:phrase ref="docklands_shadows"/>px rgba(0, 0, 0, 0.2);}	
	.border {border: <epc:phrase ref="docklands_border_thick"/>px solid #<epc:phrase ref="docklands_colour_1"/>!important; border-radius: <epc:phrase ref="docklands_border_radius"/>px}
	.borderbottom {border-bottom: <epc:phrase ref="docklands_border_thick"/>px solid #<epc:phrase ref="docklands_colour_1"/>!important;}
	.navbar {border-radius: <epc:phrase ref="docklands_border_radius"/>px}
	.ep_tm_footer {border-color: #<epc:phrase ref="docklands_colour_2"/>;!important;}
	.nav-pills li a {border-radius: <epc:phrase ref="docklands_btn_radius"/>px!important;}
	#search_box input {border-radius: <epc:phrase ref="docklands_btn_radius"/>px!important;}

	#file_aside div.rd_citation_right {box-shadow: -<epc:phrase ref="docklands_shadows"/>px 0px 10px -7px rgba(0,0,0,0.5); border: <epc:phrase ref="docklands_border_thick"/>px solid #<epc:phrase ref="docklands_colour_1"/>!important;}
	#page h1 {background-color: #<epc:phrase ref="docklands_colour_1"/>; border-radius: <epc:phrase ref="docklands_btn_radius"/>px!important;}
	.displayblock {display: block!important}
    </style>

   
		
  </head>
  <body>
    <epc:pin ref="pagetop" />
<header>
        <div id="neutral-nav" class="navbar navbar-default borderbottom " role="navigation">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainnav">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar" />
                <span class="icon-bar" />
                <span class="icon-bar" />
              </button>
		<a href="{$config{frontpage}}" title="{phrase('archive_name')}" class="navbar-brand">
          		<img style="height: 30px" alt="{phrase('archive_name')}" src="{$config{rel_path}}{$config{site_logo}}"/>
		</a>
                <!--a href="{$config{frontpage}}" title="{phrase('archive_name')}" class="navbar-brand"><epc:phrase ref="archive_name"/></a-->
              <h1 class="sr-only">
                <epc:phrase ref="archive_name" />
              </h1>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <!-- /.navbar-collapse #topnav-->
            <div class="collapse navbar-collapse" id="mainnav" >
              <ul class="nav navbar-nav">
                <li><a href="{$config{frontpage}}"><epc:phrase ref="template/navigation:home" /></a></li>
                <li><a href="{$config{http_url}}/information.html"><epc:phrase ref="template/navigation:about" /></a></li>
                <li class="dropdown displayblock"><a href="#" data-toggle="dropdown" ><epc:phrase ref="template/navigation:browse" /> <b class="caret"/></a>
		 <ul class="dropdown-menu">
            		<li><a href="{$config{http_url}}/view/year/">
                		<epc:phrase ref="bin/generate_views:indextitleprefix"/>
				<epc:phrase ref="viewname_eprint_year"/>
              		</a></li>
            		<li><a href="{$config{http_url}}/view/subjects/">
				<epc:phrase ref="bin/generate_views:indextitleprefix"/>
		                <epc:phrase ref="viewname_eprint_subjects"/>
              		</a></li>
            		<li><a href="{$config{http_url}}/view/divisions/">
				<epc:phrase ref="bin/generate_views:indextitleprefix"/>
				<epc:phrase ref="viewname_eprint_divisions"/>
			</a></li>
			<li><a href="{$config{http_url}}/view/creators/">
		                <epc:phrase ref="bin/generate_views:indextitleprefix"/>
		                <epc:phrase ref="viewname_eprint_creators"/>
              		</a></li>
          	 </ul>
		</li>
                <li><a href="{$config{http_url}}/view/divisions/">Browse by School</a></li>
                <li><a href="http://roar.uel.ac.uk/view/creators/">Browse by Author</a></li>
              </ul>
            </div>
            <!-- /#mainnav -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /#neutral-navbar -->
    </header>
    <div id="repo_search" class="container-fluid">
      <section>
        <h2 class="sr-only">Search the repository</h2>
        <form method="get" accept-charset="utf-8" action="{$config{http_cgiurl}}/search" style="display:inline">
          <div id="search_box" class="col-md-offset-0 col-md-2 col-sm-8 col-xs-9">
            <i class="glyphicon glyphicon-search" />
            <input type="search" placeholder="Search the repository" class="ep_tm_searchbarboxX form-control" name="q" />
          </div>
          <div class="col-md-1 col-sm-2 col-xs-2">
            <button class="btn btn-docklands" value="{phrase('lib/searchexpression:action_search')}" type="submit" name="_action_search">Search</button>
          </div>
          <input type="hidden" name="_action_search" value="Search" />
          <input type="hidden" name="_order" value="bytitle" />
          <input type="hidden" name="basic_srchtype" value="ALL" />
          <input type="hidden" name="_satisfyall" value="ALL" />
        </form>
      </section>
    </div>
    <!-- /#repo_search -->
    <div id="main_page" class="container-fluid">
      <nav class="col-md-2 col-sm-2 col-xs-12">
        <div class="shadow border">
	 <h2 class="sr-only">Menu</h2>
	 <epc:pin ref="login_status" />
	</div>
      </nav>
      <main id="page" class="col-md-8 col-sm-8 col-xs-12">
        <div class="ep_tm_page_content shadow border">
          <h1 class="ep_tm_pagetitle">
            <epc:pin ref="title" />
          </h1>
          <epc:pin ref="page" />
        </div>
      </main>
      <aside class="col-md-2 col-sm-2 hidden-xs">
	<div id="addnow" class="shadow border">
		<h3>
			<epc:phrase ref="deposit_h"/>
		</h3>
		<p><epc:phrase ref="deposit"/></p>
		<form method="post" accept-charset="utf-8" action="/cgi/users/home" enctype="multipart/form-data"><input name="screen" id="screen" value="NewEPrint" type="hidden" /><input value="New Item" name="_action_create" type="submit" class="btn btn-docklands" /></form>
	</div><br />
	<div id="sidebar" class="shadow border">
		<h3>Sidebar</h3>
		<epc:phrase ref="about_repo" />
	</div>
	<br />
	<div id="sidebar_top10" class="shadow border">
		<h3>Top 10</h3>
	</div>
      </aside>
	
      <footer>
        <div class="ep_tm_footer ep_noprint">
          <div class="ep_tm_eprints_logo">
            <a href="http://eprints.org/software/">
              <img alt="EPrints Logo" src="{$config{rel_path}}/images/eprintslogo.gif" />
            </a>
          </div>
          <epc:phrase ref="template:about_eprints" />
        </div>
      </footer>
    </div>
	<script>
      <epc:phrase ref="docklands_script" />
	</script>
  </body>
</html>
